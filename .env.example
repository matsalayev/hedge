# ═══════════════════════════════════════════════════════════════════════════════
#                    HEDGING GRID ROBOT - SOZLAMALAR
# ═══════════════════════════════════════════════════════════════════════════════
# Bu faylni .env ga nusxalang va kerakli qiymatlarni kiriting:
# cp .env.example .env

# ─────────────────────────────────────────────────────────────────────────────
#                           SERVER SOZLAMALARI
# ─────────────────────────────────────────────────────────────────────────────

# Server port (HEMA dan keluvchi so'rovlar uchun)
SERVER_PORT=8082

# Bot identifikatori (HEMA da ro'yxatdan o'tgan)
BOT_ID=hedging-grid-bot
BOT_NAME=Hedging Grid Robot
BOT_VERSION=1.0.0

# HEMA autentifikatsiya uchun maxfiy kalit
BOT_SECRET=your-bot-secret-key-here

# Admin API key (admin endpointlarni himoyalash uchun)
ADMIN_API_KEY=your-admin-api-key-here

# Development mode (BOT_SECRET bo'lmasa ham ishlashga ruxsat)
# OGOHLANTIRISH: Production da hech qachon true qilmang!
ALLOW_INSECURE=false

# Log darajasi: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# ─────────────────────────────────────────────────────────────────────────────
#                           BITGET API SOZLAMALARI
# ─────────────────────────────────────────────────────────────────────────────

# Bitget API kalitlari
BITGET_API_KEY=your-api-key
BITGET_SECRET_KEY=your-secret-key
BITGET_PASSPHRASE=your-passphrase

# Demo rejim (true = paper trading, false = real trading)
DEMO_MODE=true

# ─────────────────────────────────────────────────────────────────────────────
#                           TRADING SOZLAMALARI
# ─────────────────────────────────────────────────────────────────────────────

# Trading pair
TRADING_SYMBOL=BTCUSDT

# Leverage (1-125)
LEVERAGE=10

# ─────────────────────────────────────────────────────────────────────────────
#                           GRID SOZLAMALARI
# ─────────────────────────────────────────────────────────────────────────────

# Martingale multiplier (0 = fixed lot, >0 = martingale)
MULTIPLIER=1.5

# ─── GRID LEVEL 1 ───
# Distance (foizda) - birinchi grid darajasi
SPACE_PERCENT=0.5
# Orderlar soni
SPACE_ORDERS=5
# Lot hajmi (multiplier=0 bo'lganda)
SPACE_LOTS=0.01

# ─── GRID LEVEL 2 ───
SPACE1_PERCENT=1.5
SPACE1_ORDERS=1
SPACE1_LOTS=0.02

# ─── GRID LEVEL 3 ───
SPACE2_PERCENT=3.0
SPACE2_ORDERS=1
SPACE2_LOTS=0.03

# ─── GRID LEVEL 4 ───
SPACE3_PERCENT=5.0
SPACE3_ORDERS=99
SPACE3_LOTS=0.09

# ─────────────────────────────────────────────────────────────────────────────
#                           ENTRY SIGNAL SOZLAMALARI
# ─────────────────────────────────────────────────────────────────────────────

# SMA/Parabolic SAR entry (true = yoqilgan)
USE_SMA_SAR=true

# SMA Period
SMA_PERIOD=7

# Parabolic SAR parametrlari
SAR_AF=0.1
SAR_MAX=0.8

# Signal yo'nalishini teskari qilish
REVERSE_ORDER=false

# CCI entry (0 = o'chirilgan, >0 = yoqilgan)
CCI_PERIOD=0
CCI_MAX=100
CCI_MIN=-100

# Timeframe (1m, 5m, 15m, 30m, 1H, 4H, 1D)
TIMEFRAME=1H

# ─────────────────────────────────────────────────────────────────────────────
#                           PROFIT SOZLAMALARI
# ─────────────────────────────────────────────────────────────────────────────

# Bitta order uchun profit target (USDT)
SINGLE_ORDER_PROFIT=3.0

# Buy+Sell juftligi uchun umumiy profit (USDT)
PAIR_GLOBAL_PROFIT=1.0

# Kunlik profit target (USDT, 0 = cheksiz)
GLOBAL_PROFIT=0

# Maksimal zarar (USDT, 0 = cheksiz)
MAX_LOSS=0

# Kunlik savdolar soni
TRADES_PER_DAY=99

# ─────────────────────────────────────────────────────────────────────────────
#                           VAQT FILTRI
# ─────────────────────────────────────────────────────────────────────────────

# Savdo soatlari (UTC)
START_HOUR=0
START_MINUTE=0
FINISH_HOUR=23
FINISH_MINUTE=59

# ─────────────────────────────────────────────────────────────────────────────
#                           BOSHQA SOZLAMALAR
# ─────────────────────────────────────────────────────────────────────────────

# Faqat yangi shamda order qo'shish
OPEN_ON_NEW_CANDLE=true

# Base lot (Money Management uchun)
BASE_LOT=0.01

# Min/Max lot
MIN_LOT=0.001
MAX_LOT=50.0

# Tick interval (soniyada)
TICK_INTERVAL=1.0

# Debug rejim
DEBUG=false
